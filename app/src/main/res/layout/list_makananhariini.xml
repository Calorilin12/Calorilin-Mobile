<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/menusec500"
    android:padding="20dp">

    <ImageView
        android:id="@+id/gambarmakanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/makanan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namamakanan"
        android:layout_width="158dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Nasi Ayam Panggang"
        android:textColor="@color/netral"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.658"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gambarmakanan" />

    <TextView
        android:id="@+id/resto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppinslight"
        android:text="by Pura Kitchen"
        android:textSize="10dp"
        android:textColor="@color/sec500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namamakanan" />

    <ImageView
        android:id="@+id/logobintang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/bintang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resto" />

    <TextView
        android:id="@+id/mudah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppinslight"
        android:text="Mudah"
        android:textColor="@color/sec500"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toEndOf="@+id/logobintang"
        app:layout_constraintTop_toBottomOf="@+id/namamakanan" />

    <ImageView
        android:id="@+id/logokalender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/kalender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toEndOf="@+id/mudah"
        app:layout_constraintTop_toBottomOf="@+id/resto" />

    <TextView
        android:id="@+id/tanggalresep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppinslight"
        android:text="20 Mei 2021"
        android:textColor="@color/sec500"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/logokalender"
        app:layout_constraintStart_toStartOf="@+id/logokalender"
        app:layout_constraintTop_toBottomOf="@+id/resto" />


</androidx.constraintlayout.widget.ConstraintLayout>
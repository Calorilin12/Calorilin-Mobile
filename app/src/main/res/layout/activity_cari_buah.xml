<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".cariBuah">

    <ImageView
        android:id="@+id/img_back_buah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        app:srcCompat="@drawable/ic_arrow" />


    <TextView
        android:id="@+id/judulbuah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Cari menu buah"
        android:textColor="@color/netral"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/caribuah"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border2"
        android:clickable="true"
        android:drawableStart="@drawable/cari"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:fontFamily="@font/poppinslight"
        android:hint="Cari menu pilihanmu"
        android:paddingStart="15dp"
        android:paddingRight="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judulbuah" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tampilcarimakananbuah"
        android:layout_width="409dp"
        android:layout_height="525dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caribuah" />

</androidx.constraintlayout.widget.ConstraintLayout>
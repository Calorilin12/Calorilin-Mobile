<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/fotobahanmakanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/telurceplok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namabahanmakanan"
        android:layout_width="103dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Nama Makanan"
        app:layout_constraintStart_toEndOf="@+id/fotobahanmakanan"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kaloripersajian"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="44dp"
        android:text="Kalori (Per sajian) :"
        app:layout_constraintStart_toEndOf="@+id/fotobahanmakanan"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jumlahkaloribahan"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:text="120"
        app:layout_constraintStart_toEndOf="@+id/kaloripersajian"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="7dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@drawable/menusec500"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fotobahanmakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/telurceplok"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pilihbahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="264dp"
            android:text="Pilih"
            android:textColor="@color/primary"
            android:fontFamily="@font/poppinsregular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fotobahanmakanan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.542" />

        <TextView
            android:id="@+id/namabahanmakanan"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:text="Nama Makanan"
            android:textSize="14dp"
            android:fontFamily="@font/poppinsregular"
            app:layout_constraintStart_toEndOf="@+id/fotobahanmakanan"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/kaloripersajian"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:text="Kalori (Per sajian) :"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/fotobahanmakanan"
            app:layout_constraintTop_toBottomOf="@+id/namabahanmakanan" />

        <TextView
            android:id="@+id/jumlahkaloribahan"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:text="120"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14dp"
            android:textColor="@color/sec500"
            app:layout_constraintStart_toEndOf="@+id/kaloripersajian"
            app:layout_constraintTop_toBottomOf="@+id/namabahanmakanan" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/namamaknaankontrol"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/poppinsregular"
        android:text="Telur Ceplok"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kalorimakanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppinsregular"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:text="780 Kcal"
        android:textSize="14dp"
        android:textColor="@color/abutua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namamaknaankontrol" />

    <TextView
        android:id="@+id/kandunganmakanankontrol1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppinsregular"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="45 g"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/kalorimakanan"
        app:layout_constraintTop_toBottomOf="@+id/namamaknaankontrol" />

    <TextView
        android:id="@+id/kandunganmakanankontrol2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppinsregular"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="45 g"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/kandunganmakanankontrol1"
        app:layout_constraintTop_toBottomOf="@+id/namamaknaankontrol" />

    <TextView
        android:id="@+id/kandunganmakanankontrol3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppinsregular"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="45 g"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/kandunganmakanankontrol2"
        app:layout_constraintTop_toBottomOf="@+id/namamaknaankontrol" />

    <ImageView
        android:id="@+id/btnhapus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/ic_baseline_close_24"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@+id/kandunganmakanankontrol3"
        app:layout_constraintTop_toBottomOf="@+id/namamaknaankontrol"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>